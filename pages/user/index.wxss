.container{
  width: 100%;
  height: 100%;
  background: black;
  overflow: auto;
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto
}

.user-info{
  position: relative;
  padding: 20px;
  margin-bottom: 10px;
}

.user-info-avatar{
  width: 75px;
  height: 75px;
  border-radius: 50%;
  position: absolute;
  top: 20px;
  left: 20px;
}

.user-info-main{
  padding-left: 100px;
}

.user-name{
  font-size: 20px;
  color: white;
  font-weight: 500;
  margin-bottom: 5px;
  margin-top: 10px;
  display: block;
}

.user-place, .user-bio{
  font-size: 14px;
  color: #636263;
  margin-bottom: 0px;
  display: block;
}

.user-info-edit{
  width: 18px;
  height: 18px;
  margin-left: 10px;
  position: relative;
  top: 3px;
}

.user-info-tabs{
  font-size: 0;
  margin-bottom: 10px;
}

.user-info-tab{
  width: 33.33%;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  font-size: 14px;
  color: white;
  padding-bottom: 10px;
  border-bottom: 3px solid #D8D8D8;
}

.user-info-tab-active{
  border-bottom: 3px solid #FCD636;
}

.video-list-item{
  padding: 10px;
  border-bottom: 1px solid #979797;
  position: relative;
  padding-left: 150px;
}

.video-list-item-left{
  width: 110px;
  height: 145px;
  position: absolute;
  top: 0;
  left: 20px;
}

.video-list-item-image{
  width: 100%;
  height: 100%;
}

.video-list-item-play{
  width: 36px;
  height: 36px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -18px;
  margin-left: -18px;
}

.video-list-item-name{
  font-size: 18px;
  color: white;
  margin-bottom: 5px;
}

.video-list-item-info{
  color: #D8D8D8;
  margin-bottom: 5px;
  font-size: 13px;
}

.video-list-item-icon{
  width: 12px;
  height: 12px;
  margin: 0 0 0 10px;
}

.video-list-item-condition{
  margin-top: 5px;
  font-size: 0;
}

.video-list-item-condition-left{
  display: inline-block;
  vertical-align: top;
  width: 75%;
  font-size: 14px;
  background: #4E6576;
  position: relative;
  height: 20px;
  line-height: 20px;
  color: white;
}

.video-list-item-condition-right{
  display: inline-block;
  vertical-align: top;
  width: 25%;
  font-size: 13px;
  color: white;
}

.video-list-item-condition-text{
  font-size: 13px;
  color: #C9C9C9;
}

.video-list-item-condition-percent{
  background: #4880FF;
  text-align: left;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  padding-left: 5px;
}



